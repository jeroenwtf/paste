<% flash.each do |type, msg| %>
  <div class="info">
    <%= msg %>
  </div>
<% end %>

<div class="note">
  <div class="markdown-body">
    <%= body_to_html(@note.body) %>
  </div>
</div>

<div class="info">
  <%= link_to "edit", [:edit, @note] %> |
  created at <%= @note.created_at.to_fs(:short) %> |
  updated at <%= @note.updated_at.to_fs(:short) %> |
  <%= @note.views %> views
</div>
